;;; 2.3 パーセプトロンの実装

;; 2.3.1 簡単な実装
(defun and-perceptron (x1 x2)
  (let ((w1 0.5)
        (w2 0.5)
        (theta 0.7))
    (if (<= (+ (* w1 x1) (* w2 x2)) theta)
      0 1)))

(and-perceptron 1 0) ; => 0
(and-perceptron 0 1) ; => 0
(and-perceptron 1 1) ; => 1
(and-perceptron 0 0) ; => 0

